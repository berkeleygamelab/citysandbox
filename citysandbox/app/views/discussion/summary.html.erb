	});
	$('#sortby li').each( function () {
		$(this).click( function() {
			console.log(this.children);
		})
	});
	
	var categories_checked = [];
	$('#categories li').each( function () {
		$(this).click( function() {
			categories_checked = [];
			$('#categories li :checked').each( function () {
				categories_checked.push($(this).attr('value'));
			});
			var url_string = '/summary'
			for (category in categories_checked) {
				if (url_string.indexOf('category') == -1) {
					url_string += '?category[]=' + categories_checked[category];
				} else {
					url_string += '&category[]=' + categories_checked[category];
				} 
			console.log(url_string);
			window.location = url_string;
			}
			
		});
	});
	types_checked = [];
	$('#sort_by_type li').each( function () {
		$(this).click( function() {
			type_checked = [];
			$('#sort_by_type li :checked').each( function () {
				type_checked.push($(this).attr('value'));
			});
			var url_string = '/summary'
			for (type in type_checked) {
				if (url_string.indexOf('itemz') == -1) {
					url_string += '?itemz=' + type_checked[type];
				} else {
					url_string += '&itemz=' + type_checked[type];
				} 
			window.location = url_string;
			}
			
		});
	});
});
</script>

<div id='sidebar'>
