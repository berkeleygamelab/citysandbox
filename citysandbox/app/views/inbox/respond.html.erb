Subject: <%=h @message.subject %>
Message: <%=h @message.body %>
<br>
Sent from: <%=h @message.user.login %>
<br>
<br>
<%= form_tag("create", :method => "get") do %>
  <%= label_tag(:subject, "Subject:") %>
  <%= text_field_tag(:subject) %>
  <%= label_tag(:body, "Body:") %>
  <%= text_field_tag(:body) %>
  <%= hidden_field_tag(:user_id, @message.user.id)%>
  <%= submit_tag("Create") %>
<% end %>