		<div class='entry_author'>
			<%= image_tag "../images/default_avatar.png", :class=>'user_avatar', :size=>'60x60', :alt => "User avatar" %>
			<%=h r.user.picture %> 
			<br>
			<%=h r.user.login %>	
			<br>
			<%= r.created_at.strftime("%Y %b %d") %>
			<br>
		</div>
		<div class='entry_title'>
			<b><%= r.title %></b>
		</div>	
		<div class='latest_response'>
		    <%=h r.description %>
		</div>
