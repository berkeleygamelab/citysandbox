<script type="text/javascript">
$(document).ready( function() {	
	$('#tabs ul').idTabs();
	
	var map;
    var myOptions = {
    	zoom: 14,
    	center: new google.maps.LatLng(37.87159260,-122.2727470), // Berkeley, CA
    	mapTypeId: google.maps.MapTypeId.ROADMAP
	};
   	map = new google.maps.Map(document.getElementById('map_canvas'), myOptions);

    var geocoder = new google.maps.Geocoder();
	var address = $.trim(address = $('#challenge_location').val().replace(/[\t\n\r]/gi, ""));
	    geocoder.geocode( { 'address': address}, function(results, status) {
	      if (status == google.maps.GeocoderStatus.OK) {
	        map.setCenter(results[0].geometry.location);
	        var marker = new google.maps.Marker({
	            map: map,
	            position: results[0].geometry.location
	        });
		}
	});
	
	$('#event_location').blur( function() {
		var event_geocoder = new google.maps.Geocoder();
		var event_address = $.trim(event_address = $('#event_location').val().replace(/[\t\n\r]/gi, ""));
		    geocoder.geocode( { 'address': event_address}, function(results, status) {
		      if (status == google.maps.GeocoderStatus.OK) {		      
				$('#event_lat').attr('value', results[0].geometry.location.lat());
				$('#event_lng').attr('value', results[0].geometry.location.lng());
		      }	
		});
	});
	var qr_url = window.location.href;
	qr_url = (qr_url.indexOf('?') != -1) ? qr_url.substring(0, qr_url.indexOf('?')) : qr_url;
	qr_url = (qr_url.indexOf('#') != -1) ? qr_url.substring(0, qr_url.indexOf('#')) : qr_url;
	$('#QR').attr('href', 'https://chart.googleapis.com/chart?chs=150x150&cht=qr&chl=' + qr_url + '&choe=UTF-8');
	
	$('#share').attr('href', 'mailto:?subject=[City%20Sandbox]%20<%=@challenge.user.login%>%20has%20shared%20a%20link%20with%20you!&body=' + qr_url);
	
	$('#unfollow_user').click(function(){
		var params = {};
		params['item_to_follow'] = '<%= @challenge.user.id %>';
		params['type'] = 'User';
		$.get('/unfollow', params);
		$('#unfollow_user').hide();
		$('#follow_user').show();
	});
	
	$('#follow_user').click(function(){
		var params = {};
		params['item_to_follow'] = '<%= @challenge.user.id %>';
		params['type'] = 'User';
		$.get('/follow', params);
		$('#follow_user').hide();
		$('#unfollow_user').show();
	});
	
	$('#unfollow').click(function(){
		var params = {};
		params['item_to_follow'] = '<%= @challenge.id %>';
		params['type'] = 'Challenge';
		$.get('/unfollow', params);
		$('#unfollow').hide();
		$('#follow').show();
	});
	
	$('#follow').click(function(){
		var params = {};
		params['item_to_follow'] = '<%= @challenge.id %>';
		params['type'] = 'Challenge';
		$.get('/follow', params);
		$('#follow').hide();
		$('#unfollow').show();
	});
	
	if ('<%= @followed %>' == 'true') {
		$('#follow').hide();
	} else {
		$('#unfollow').hide();
	}
	if ('<%= @followed_user %>' == 'true') {
		$('#follow_user').hide();
	} else {
		$('#unfollow_user').hide();
	}
	
	$('.vote').each( function(){
		$(this).click( function() {
			var params = {};
			params['id'] = $(this).attr('name');
			$.get('/vote', params);
			$('.vote').each( function() {
				$(this).hide();
			})
			$(this).html('Voted');
			$(this).show();
		});	
	});
	
	$(window).resize(function() {
		$('#content').css('margin-left', ($(window).width()-960)/2 + 'px');
	});
	$('#content').css('margin-left', ($(window).width()-960)/2 + 'px');
});
</script>
