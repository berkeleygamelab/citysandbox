<!DOCTYPE html>
<html>
<head>
  <title>City Sandbox</title>
  <%= stylesheet_link_tag '../stylesheets/jquery-ui-1.8.18.custom.css' %>
  <%= stylesheet_link_tag    '../stylesheets/public_stylesheet.css' %>
  <%= stylesheet_link_tag    '../stylesheets/fancybox.css' %>
  <%= javascript_include_tag "application.js" %>
  <%= javascript_include_tag "textbox.js" %>
  <%= javascript_include_tag "stickysidebar.js" %>
  <%= javascript_include_tag "tabs.js" %>
  <%= javascript_include_tag "fancybox.js" %>

  <%= javascript_include_tag "jquery_ujs.js" %> 
  <%= javascript_include_tag "jquery-1.7.1.min.js" %>
  <%= javascript_include_tag "jquery-ui-1.8.18.custom.min.js" %> 
  <%= javascript_include_tag "autocomplete-rails.js" %> 
<%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/themes/ui-lightness/jquery-ui.css" %>
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
</head>
<style type="text/css">
html {
        background: url(<%= asset_path 'splash_background.png' %>) no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
}
</style>

<body class="<%= params[:controller] %>">
<div id='wrap'>
   <div id="container">
	<% if params[:controller] != "home" && params[:controller] != 'users' && params[:controller] != 'sessions' && params[:action] != 'qr' %>
 		<%= render :partial => 'layouts/navbar' %>
	<% elsif params[:controller] == 'users' && params[:action] == 'profile' %>
		<%= render :partial => 'layouts/navbar' %>
	<% elsif params[:controller] == 'map' && params[:action] == 'draw_map' %>		
 	<% end %>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>

	<%= yield %>
	
   </div>
</div>
<% if params[:controller] != "home"  && params[:controller] != 'users' && params[:controller] != 'sessions' && params[:action] != 'qr' %>
	<%= render :partial => 'layouts/footer', :class=>'footer' %>
<% elsif params[:controller] == 'map' && params[:action] == 'draw_map' %>
		
<% end %>
 </body>
</html>