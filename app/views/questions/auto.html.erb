
<script type="text/javascript">
$(document).ready(function(){
jQuery.ajaxSetup({
'beforeSend': function(xhr) {xhr.setRequestHeader("Accept", "text/javascript")}
})
$("#q").autocomplete( {
url : '<%= formatted_categories_path(:js) %>',
mustMatch : false
}
);
$("#q").autocomplete('result', function(event, data, formatted) {
if (data)
document.location.href = '/categories/' + data[1];
});
});
</script>
<% end%>

<% form_tag categories_path, :method => 'get' do %>
<%= text_field_tag :q, params[:q] %>
<%= submit_tag "Locate category", :name => nil %>
<% end %>
